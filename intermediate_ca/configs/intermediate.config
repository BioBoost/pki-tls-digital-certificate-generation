[ ca ]
default_ca      = CA_default

[ CA_default]
dir             = ./intermediate_ca               # helper variable pointing to ca specific files
rootdir         = ./root_ca

database        = $dir/db/index                   # database of certs generated by the ca
new_certs_dir   = $dir/certificates/by_serial
certificate     = $rootdir/certificates/intermediate.pem
serial          = $dir/db/serial                  # file with incrementing hex serial number for certs
private_key     = $dir/key/intermediate.key

policy          = policy_any
email_in_dn     = no                  # recommended
unique_subject  = no                  # recommended for easier certificate rollover
copy_extensions = none                # don't honor the extensions in the csr
default_md      = sha256

[ policy_any ]
countryName            = optional
stateOrProvinceName    = optional
organizationName       = optional
organizationalUnitName = optional
commonName             = supplied